{% extends 'base.html.twig' %}

{% block title %}Nos Voyages solidaires{% endblock %}

{% block body %}
<h1 class="title p-1 text-center">Nos Voyages Solidaires</h1>

<div class="row m-0 justify-content-between ">

    <div class="col-md-8">
      <div class="row">
      {% for article in articles %}

      <div class="card mb-3">
  <h3 class="card-header">{{article.title}} - Du {{article.depart| date("d/m/Y")}} au {{article.retour| date("d/m/Y")}}</h3>
  <div class="card-body">
    
    
  </div>
  <img class="card-img-top" src="/assets/blog/images/{{article.image}}" alt="{{article.title}}">
  <div class="card-body">
  <div>{{article.introduction}}</div>
  <h5></h5>
   
    <a href="{{path('show', {'id':article.id})}}" class="btn btn-warning fluid"><img class="img-fluid" src="/assets/blog/category/mode-avion.png"><img class="img-fluid"  src="/assets/blog/category/64.png"> {{article.price}} €  En savoir plus</a>
    
  </div>
  
  {# <div class="card-body">
    
  </div> #}
  {# <div class="card-footer text-muted"> #}
    {# <p class="date">Voyage mis à jour le {{article.createdAt | date("d/m/Y")}} #}
  {# </div> #}
</div>

              {% endfor %}
      </div>
    </div>
    <div class="col-md-3">
    <h2>Catégories</h2>
    <ul class="list-group">
    {% for category in categories %}
    
     <li class="list-group-item d-flex justify-content-between align-items-center">
      
    <a href="{{path('show_article',{'id':category.id})}}"><img src="/assets/blog/category/{{category.image}}" title ="{{category.title}} " alt="{{category.title}} "/> {{category.title}} 
    <span class="badge bg-primary rounded-pill">{{category.articles | length}} voyage(s)  </span>
    
  </a>
  
  </li>
    {% endfor %}
  
  
</ul>
    </div>

          
</div>

{% endblock %}
